{
    "manifest_version": 2,

    "name": "Easy Notes",
    "description": "This extension allows for easy note taking",
    "version": "1.0.0",
    //"options_page": "options.html",

    "browser_action": {
        "default_title": "Easy Notes",
        "default_icon": "icon.png",
        "default_popup": "popup.html"

    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": [ "storage", "tabs" ]
}

